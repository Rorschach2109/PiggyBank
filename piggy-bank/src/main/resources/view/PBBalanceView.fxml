<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="content-window" stylesheets="@../MainWindow.css" xmlns="http://javafx.com/javafx/8.0.92" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.piggybank.app.controller.PiggyBalanceController">
   <children>
      <HBox id="balance-header-box" spacing="10.0">
         <children>
            <Label fx:id="headerLabel" id="balance-title-label"/>
         </children>
      </HBox>
      <HBox prefHeight="60.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" prefHeight="60.0" prefWidth="250.0" text="Expenses">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Label fx:id="expensesLabel" alignment="CENTER" prefHeight="60.0" prefWidth="300.0" textFill="RED">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="60.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" prefHeight="60.0" prefWidth="250.0" text="Incomes">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Label fx:id="incomesLabel" alignment="CENTER" prefHeight="60.0" prefWidth="300.0" textFill="GREEN">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="60.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" prefHeight="60.0" prefWidth="250.0" text="Balance">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Label fx:id="balanceLabel" alignment="CENTER" prefHeight="60.0" prefWidth="300.0">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="60.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" prefHeight="60.0" prefWidth="250.0" text="Current savings">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Label fx:id="currentSavingsLabel" alignment="CENTER" prefHeight="60.0" prefWidth="300.0">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
